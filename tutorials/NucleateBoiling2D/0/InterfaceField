FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      InterfaceField;
}

dimensions      [0 0 0 0 0 0 0];
internalField   uniform 0;

boundaryField
{
    Cavity          { type zeroGradient; }
    Base            { type zeroGradient; }
    FarStream       { type zeroGradient; }
    Top             { type zeroGradient; }
    Axis            { type symmetryPlane; }   // or zeroGradient, depending
    FrontNBack_neg  { type wedge; }
    FrontNBack_pos  { type wedge; }
}
